<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="240" d:DesignHeight="428"
             x:Class="Poslannik.Client.Ui.Android.Views.ChatView">
    
    <Grid RowDefinitions="Auto,*,Auto">
        
        <Border Grid.Row="0" 
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                Padding="10">
            <Grid ColumnDefinitions="Auto,*,Auto">
                
                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="5"
                        Margin="0,0,10,0"
                        Name="BackButton">
                    <Viewbox Width="24" Height="24">
                        <Canvas Width="24" Height="24">
                            <Path Fill="#000000" 
                                  Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
                        </Canvas>
                    </Viewbox>
                </Button>
                
                <TextBlock Grid.Column="1"
                           Text="Иван Иванов"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
                
                <Border Grid.Column="2"
                        Width="35" Height="35"
                        CornerRadius="17.5"
                        Background="#E0E0E0">
                    <Viewbox Width="20" Height="20">
                        <Canvas Width="24" Height="24">
                            <Path Fill="#999999" 
                                  Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                        </Canvas>
                    </Viewbox>
                </Border>
                
            </Grid>
        </Border>
        
        <ScrollViewer Grid.Row="1"
                      Background="#F5F5F5"
                      Name="MessagesScrollViewer">
            <StackPanel Margin="10" Spacing="10">
                
                <StackPanel HorizontalAlignment="Left" MaxWidth="200">
                    <TextBlock Text="Иван Иванов"
                               FontSize="12"
                               Foreground="#666666"
                               Margin="10,0,0,4"/>
                    <Border Background="White"
                            CornerRadius="15,15,15,5"
                            Padding="12,8">
                        <TextBlock Text="ААААвввввввввввв?"
                                   TextWrapping="Wrap"
                                   FontSize="14"/>
                    </Border>
                </StackPanel>
                
                <Border HorizontalAlignment="Right"
                        Background="#7B86CB"
                        CornerRadius="15,15,5,15"
                        Padding="12,8"
                        MaxWidth="200">
                    <TextBlock Text="Вввввввввввввв."
                               TextWrapping="Wrap"
                               Foreground="White"
                               FontSize="14"/>
                </Border>
                
                <StackPanel HorizontalAlignment="Left" MaxWidth="200">
                    <TextBlock Text="Иван Иванов"
                               FontSize="12"
                               Foreground="#666666"
                               Margin="10,0,0,4"/>
                    <Border Background="White"
                            CornerRadius="15,15,15,5"
                            Padding="12,8">
                        <TextBlock Text="АААААвввввввввввввв вввввввввввввв вввввввввв."
                                   TextWrapping="Wrap"
                                   FontSize="14"/>
                    </Border>
                </StackPanel>
                
                <Border HorizontalAlignment="Right"
                        Background="#7B86CB"
                        CornerRadius="15,15,5,15"
                        Padding="12,8"
                        MaxWidth="200">
                    <TextBlock Text="Вввввввввввввввввввв вввввввввввввввввввв вввввввввв."
                               TextWrapping="Wrap"
                               Foreground="White"
                               FontSize="14"/>
                </Border>
                
                <StackPanel HorizontalAlignment="Left" MaxWidth="200">
                    <TextBlock Text="Иван Иванов"
                               FontSize="12"
                               Foreground="#666666"
                               Margin="10,0,0,4"/>
                    <Border Background="White"
                            CornerRadius="15,15,15,5"
                            Padding="12,8">
                        <TextBlock Text="ААААААввввввввввв вввввввввввв вввввввввввв вввввввввввввв?"
                                   TextWrapping="Wrap"
                                   FontSize="14"/>
                    </Border>
                </StackPanel>
                
                <Border HorizontalAlignment="Right"
                        Background="#7B86CB"
                        CornerRadius="15,15,5,15"
                        Padding="12,8"
                        MaxWidth="200">
                    <TextBlock Text="Вв."
                               TextWrapping="Wrap"
                               Foreground="White"
                               FontSize="14"/>
                </Border>
                
                <StackPanel HorizontalAlignment="Left" MaxWidth="200">
                    <TextBlock Text="Иван Иванов"
                               FontSize="12"
                               Foreground="#666666"
                               Margin="10,0,0,4"/>
                    <Border Background="White"
                            CornerRadius="15,15,15,5"
                            Padding="12,8">
                        <TextBlock Text="Вввввввввввввввв."
                                   TextWrapping="Wrap"
                                   FontSize="14"/>
                    </Border>
                </StackPanel>
                
            </StackPanel>
        </ScrollViewer>
        
        <Border Grid.Row="2"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="10">
            <Grid ColumnDefinitions="*,Auto">
                
                <TextBox Grid.Column="0"
                         Watermark="Сообщение..."
                         Background="#F5F5F5"
                         BorderThickness="0"
                         CornerRadius="20"
                         Padding="15,10"
                         VerticalAlignment="Center"
                         Name="MessageTextBox"/>
                
                <Button Grid.Column="1"
                        Background="#7B86CB"
                        Width="40"
                        Height="40"
                        CornerRadius="20"
                        Margin="8,0,0,0"
                        Padding="0"
                        Name="SendButton">
                    <Viewbox Width="20" Height="20">
                        <Canvas Width="24" Height="24">
                            <Path Fill="White" 
                                  Data="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/>
                        </Canvas>
                    </Viewbox>
                </Button>
                
            </Grid>
        </Border>
        
    </Grid>
</UserControl>