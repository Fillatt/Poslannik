<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="240" d:DesignHeight="428"
             x:Class="Poslannik.Client.Ui.Android.Views.ChatsView">
    
    <Grid RowDefinitions="Auto,*,Auto">
        
        <Border Grid.Row="0" 
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                Padding="15,10">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="Чаты"
                           FontSize="20"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                
                <Button Grid.Column="1"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="5"
                        Name="AddChatButton">
                    <Viewbox Width="24" Height="24">
                        <Canvas Width="24" Height="24">
                            <Path Fill="#7B86CB" 
                                  Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
                        </Canvas>
                    </Viewbox>
                </Button>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1">
            <StackPanel Name="ChatsListPanel">
                
                <Button Background="White"
                        BorderThickness="0,0,0,1"
                        BorderBrush="#F0F0F0"
                        Padding="15,12"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Name="Chat1Button">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Width="40" Height="40"
                                CornerRadius="20"
                                Background="#E0E0E0"
                                Margin="0,0,12,0">
                            <Viewbox Width="24" Height="24">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="#999999" 
                                          Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>

                        <TextBlock Grid.Column="1"
                                   Text="Иван Иванов"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                
                <Button Background="White"
                        BorderThickness="0,0,0,1"
                        BorderBrush="#F0F0F0"
                        Padding="15,12"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Name="Chat2Button">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Width="40" Height="40"
                                CornerRadius="20"
                                Background="#E0E0E0"
                                Margin="0,0,12,0">
                            <Viewbox Width="24" Height="24">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="#999999" 
                                          Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                        <TextBlock Grid.Column="1"
                                   Text="Петр Петров"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                
                <Button Background="White"
                        BorderThickness="0,0,0,1"
                        BorderBrush="#F0F0F0"
                        Padding="15,12"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Name="Chat3Button">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Width="40" Height="40"
                                CornerRadius="20"
                                Background="#E0E0E0"
                                Margin="0,0,12,0">
                            <Viewbox Width="24" Height="24">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="#999999" 
                                          Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                        <TextBlock Grid.Column="1"
                                   Text="Сидр Сидоров"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                
                <Button Background="White"
                        BorderThickness="0,0,0,1"
                        BorderBrush="#F0F0F0"
                        Padding="15,12"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Name="GroupChatButton">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Width="40" Height="40"
                                CornerRadius="20"
                                Background="#E0E0E0"
                                Margin="0,0,12,0">
                            <Viewbox Width="24" Height="24">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="#999999" 
                                          Data="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5s-3 1.34-3 3 1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                        <TextBlock Grid.Column="1"
                                   Text="Смартфон виво"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                
                <Button Background="White"
                        BorderThickness="0,0,0,1"
                        BorderBrush="#F0F0F0"
                        Padding="15,12"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Name="Chat5Button">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Width="40" Height="40"
                                CornerRadius="20"
                                Background="#E0E0E0"
                                Margin="0,0,12,0">
                            <Viewbox Width="24" Height="24">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="#999999" 
                                          Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                        <TextBlock Grid.Column="1"
                                   Text="Олег Олегов"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                
            </StackPanel>
        </ScrollViewer>
        
        <Border Grid.Row="2"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="0,8">
            <Grid ColumnDefinitions="*,*">
                
                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="0,8"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Name="ChatsTabButton">
                    <StackPanel Spacing="4" HorizontalAlignment="Center">
                        <Viewbox Width="28" Height="28"
                                 HorizontalAlignment="Center">
                            <Canvas Width="24" Height="24">
                                <Path Fill="#7B86CB" 
                                      Data="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Чаты"
                                   FontSize="12"
                                   Foreground="#7B86CB"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   MinWidth="70"/>
                    </StackPanel>
                </Button>
                
                <Button Grid.Column="1"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="0,8"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Name="ProfileTabButton">
                    <StackPanel Spacing="4" HorizontalAlignment="Center">
                        <Viewbox Width="28" Height="28"
                                 HorizontalAlignment="Center">
                            <Canvas Width="24" Height="24">
                                <Path Fill="#999999" 
                                      Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Профиль"
                                   FontSize="12"
                                   Foreground="#999999"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   MinWidth="70"/>
                    </StackPanel>
                </Button>
                
            </Grid>
        </Border>
        
    </Grid>
</UserControl>
