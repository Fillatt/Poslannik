<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="240" d:DesignHeight="428"
             x:Class="Poslannik.Client.Ui.Controls.UserProfileView">
    
    <Grid RowDefinitions="Auto,*,Auto">
        
        <Border Grid.Row="0" 
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                Padding="10">
            <Grid ColumnDefinitions="Auto,*">
                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="5"
                        Margin="0,0,10,0"
                        Command="{Binding NavigateBackCommand}"
                        Name="BackButton">
                    <Viewbox Width="24" Height="24">
                        <Canvas Width="24" Height="24">
                            <Path Fill="#000000" 
                                  Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
                        </Canvas>
                    </Viewbox>
                </Button>
                
                <TextBlock Grid.Column="1"
                           Text="Профиль"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Grid>
        </Border>
        
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="20" Margin="20,40">
                
                <Border Width="120" Height="120"
                        CornerRadius="60"
                        BorderBrush="#E0E0E0"
                        BorderThickness="2"
                        HorizontalAlignment="Center">
                    <Viewbox Width="60" Height="60">
                        <Canvas Width="24" Height="24">
                            <Path Fill="#999999" 
                                  Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                        </Canvas>
                    </Viewbox>
                </Border>
                
                <TextBlock Text="Иван Иванов"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                
                <TextBlock Text="id32Xx12412"
                           FontSize="14"
                           Foreground="#999999"
                           HorizontalAlignment="Center"
                           Margin="0,-15,0,0"/>
                
                <TextBlock Text="Группа: ПИМ6-02-1оп-22"
                           FontSize="16"
                           HorizontalAlignment="Center"/>
                
            </StackPanel>
        </ScrollViewer>
        
        <Border Grid.Row="2"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="0,8">
            <Grid ColumnDefinitions="*,*">
                
                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="0,8"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Command="{Binding NavigateBackCommand}"
                        Name="ChatsTabButton">
                    <StackPanel Spacing="4" HorizontalAlignment="Center">
                        <Viewbox Width="28" Height="28"
                                 HorizontalAlignment="Center">
                            <Canvas Width="24" Height="24">
                                <Path Fill="#7B86CB" 
                                      Data="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Чаты"
                                   FontSize="12"
                                   Foreground="#7B86CB"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   MinWidth="70"/>
                    </StackPanel>
                </Button>
                
                <Button Grid.Column="1"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="0,8"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Name="ProfileTabButton">
                    <StackPanel Spacing="4" HorizontalAlignment="Center">
                        <Viewbox Width="28" Height="28"
                                 HorizontalAlignment="Center">
                            <Canvas Width="24" Height="24">
                                <Path Fill="#999999" 
                                      Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Профиль"
                                   FontSize="12"
                                   Foreground="#999999"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   MinWidth="70"/>
                    </StackPanel>
                </Button>
                
            </Grid>
        </Border>
        
    </Grid>
</UserControl>