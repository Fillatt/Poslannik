<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="240" d:DesignHeight="428"
             x:Class="Poslannik.Client.Ui.Controls.ParticipantsView">
    
    <Grid RowDefinitions="Auto,*,Auto" Background="#FAFAFA">
        
        <Border Grid.Row="0" 
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                Padding="10">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="5"
                        Margin="0,0,10,0"
                        Command="{Binding NavigateBackCommand}"
                        Name="BackButton">
                    <Viewbox Width="24" Height="24">
                        <Canvas Width="24" Height="24">
                            <Path Fill="#000000" 
                                  Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
                        </Canvas>
                    </Viewbox>
                </Button>
                
                <TextBlock Grid.Column="1"
                           Text="Участники"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
                
                <Button Grid.Column="2"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="5"
                        Command="{Binding AddParticipantCommand}"
                        Name="AddParticipantButton">
                    <Viewbox Width="24" Height="24">
                        <Canvas Width="24" Height="24">
                            <Path Fill="#EF3C45"
                                  Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
                        </Canvas>
                    </Viewbox>
                </Button>
            </Grid>
        </Border>
        
        <ScrollViewer Grid.Row="1" Padding="0,10">
            <StackPanel>
                
                <Button Background="White"
                        BorderThickness="0,0,0,1"
                        BorderBrush="#F0F0F0"
                        Padding="15,12"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Command="{Binding NavigateToUserProfileCommand}"
                        Name="MyProfileButton">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Width="40" Height="40"
                                CornerRadius="20"
                                Background="#E0E0E0"
                                Margin="0,0,12,0">
                            <Viewbox Width="24" Height="24">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="#999999" 
                                          Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                        <TextBlock Grid.Column="1"
                                   Text="Я Я"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                
                <Button Background="White"
                        BorderThickness="0,0,0,1"
                        BorderBrush="#F0F0F0"
                        Padding="15,12"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Command="{Binding NavigateToUserProfileCommand}"
                        Name="Participant1Button">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Border Width="40" Height="40"
                                CornerRadius="20"
                                Background="#E0E0E0"
                                Margin="0,0,12,0">
                            <Viewbox Width="24" Height="24">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="#999999" 
                                          Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                        <TextBlock Grid.Column="1"
                                   Text="Петр Петров"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                        <Button Grid.Column="2"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="5"
                                Command="{Binding RemoveParticipantCommand}"
                                Name="RemoveParticipant1">
                            <Viewbox Width="20" Height="20">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="#EF3C45"
                                          Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm3.59-13L12 10.59 8.41 7 7 8.41 10.59 12 7 15.59 8.41 17 12 13.41 15.59 17 17 15.59 13.41 12 17 8.41z"/>
                                </Canvas>
                            </Viewbox>
                        </Button>
                    </Grid>
                </Button>
                
                <Button Background="White"
                        BorderThickness="0,0,0,1"
                        BorderBrush="#F0F0F0"
                        Padding="15,12"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Command="{Binding NavigateToUserProfileCommand}"
                        Name="Participant2Button">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Border Width="40" Height="40"
                                CornerRadius="20"
                                Background="#E0E0E0"
                                Margin="0,0,12,0">
                            <Viewbox Width="24" Height="24">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="#999999" 
                                          Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                        <TextBlock Grid.Column="1"
                                   Text="Иван Иванов"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                        <Button Grid.Column="2"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="5"
                                Command="{Binding RemoveParticipantCommand}"
                                Name="RemoveParticipant2">
                            <Viewbox Width="20" Height="20">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="#EF3C45"
                                          Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm3.59-13L12 10.59 8.41 7 7 8.41 10.59 12 7 15.59 8.41 17 12 13.41 15.59 17 17 15.59 13.41 12 17 8.41z"/>
                                </Canvas>
                            </Viewbox>
                        </Button>
                    </Grid>
                </Button>
                
            </StackPanel>
        </ScrollViewer>
        
        <Border Grid.Row="2" Padding="15,10">
            <Button Background="#EF3C45"
                    Foreground="White"
                    Content="Удалить чат"
                    FontSize="16"
                    FontWeight="SemiBold"
                    CornerRadius="20"
                    Padding="0,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Command="{Binding DeleteChatCommand}"
                    Name="DeleteChatButton"/>
        </Border>

    </Grid>
</UserControl>