<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="240" d:DesignHeight="428"
             x:Class="Poslannik.Client.Ui.Controls.ChatView">

    <UserControl.Styles>
        <Style Selector="TextBox#MessageTextBox:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="#EF3C45"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,*,Auto" Background="#FAFAFA">

        <Border Grid.Row="0"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                Padding="10">
            <Grid ColumnDefinitions="Auto,*,Auto">

                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="5"
                        Margin="0,0,10,0"
                        Command="{Binding NavigateBackCommand}"
                        Name="BackButton">
                    <Viewbox Width="24" Height="24">
                        <Canvas Width="24" Height="24">
                            <Path Fill="#000000"
                                  Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
                        </Canvas>
                    </Viewbox>
                </Button>

                <TextBlock Grid.Column="1"
                           Text="{Binding ChatName}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="2"
                        Width="35" Height="35"
                        CornerRadius="17.5"
                        Background="#E0E0E0"
                        Padding="0"
                        BorderThickness="0"
                        Command="{Binding NavigateToUserProfileCommand}"
                        Name="UserAvatarButton">
                    <Viewbox Width="20" Height="20">
                        <Canvas Width="24" Height="24">
                            <Path Fill="#999999"
                                  Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                        </Canvas>
                    </Viewbox>
                </Button>

            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1"
                      Background="#F5F5F5"
                      Name="MessagesScrollViewer">
            <ItemsControl ItemsSource="{Binding Messages}" Margin="10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Spacing="10"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <!-- Сообщение от другого пользователя -->
                            <StackPanel HorizontalAlignment="Left"
                                        MaxWidth="200"
                                        IsVisible="{Binding !IsOwnMessage}">
                                <TextBlock Text="{Binding SenderName}"
                                           FontSize="12"
                                           Foreground="#666666"
                                           Margin="10,0,0,4"
                                           IsVisible="{Binding $parent[UserControl].DataContext.IsGroupChat}"/>
                                <Border Background="White"
                                        CornerRadius="15,15,15,5"
                                        Padding="12,8">
                                    <TextBlock Text="{Binding Text}"
                                               TextWrapping="Wrap"
                                               FontSize="14"/>
                                </Border>
                            </StackPanel>

                            <!-- Собственное сообщение -->
                            <Border HorizontalAlignment="Right"
                                    Background="#EF3C45"
                                    CornerRadius="15,15,5,15"
                                    Padding="12,8"
                                    MaxWidth="200"
                                    IsVisible="{Binding IsOwnMessage}">
                                <TextBlock Text="{Binding Text}"
                                           TextWrapping="Wrap"
                                           Foreground="White"
                                           FontSize="14"/>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border Grid.Row="2"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="10">
            <Grid ColumnDefinitions="*,Auto">

                <TextBox Grid.Column="0"
                         Text="{Binding MessageText}"
                         Watermark="Сообщение..."
                         Background="#F5F5F5"
                         BorderBrush="#EF3C45"
                         BorderThickness="2"
                         CornerRadius="20"
                         Padding="15,10"
                         VerticalAlignment="Center"
                         Name="MessageTextBox"/>

                <Button Grid.Column="1"
                        Background="#EF3C45"
                        Width="40"
                        Height="40"
                        CornerRadius="20"
                        Margin="8,0,0,0"
                        Padding="0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Command="{Binding SendMessageCommand}"
                        Name="SendButton">
                    <Viewbox Width="20" Height="20">
                        <Canvas Width="24" Height="24">
                            <Path Fill="White"
                                  Data="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/>
                        </Canvas>
                    </Viewbox>
                </Button>

            </Grid>
        </Border>

    </Grid>
</UserControl>
