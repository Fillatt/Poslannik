<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="240" d:DesignHeight="428"
             x:Class="Poslannik.Client.Ui.Controls.ProfileView">

    <Grid RowDefinitions="Auto,*,Auto" Background="#FAFAFA">
        
        <Border Grid.Row="0" 
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                Padding="15,10">
            <TextBlock Text="Профиль"
                       FontSize="20"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>
        
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="20" Margin="20,30">

                <Border Width="120" Height="120"
                        CornerRadius="60"
                        BorderBrush="#E0E0E0"
                        BorderThickness="2"
                        HorizontalAlignment="Center">
                    <Viewbox Width="60" Height="60">
                        <Canvas Width="24" Height="24">
                            <Path Fill="#999999"
                                  Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                        </Canvas>
                    </Viewbox>
                </Border>

                <StackPanel Spacing="8">
                    <TextBlock Text="{Binding DisplayName}"
                               FontSize="24"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Spacing="15" Margin="0,20,0,0">

                    <Border Background="#F5F5F5"
                            CornerRadius="10"
                            Padding="15,12">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Логин:"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding UserName}"
                                       FontSize="16"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="10">
            <Grid RowDefinitions="Auto,Auto" Margin="0">

                <Button Grid.Row="0"
                        Background="#EF3C45"
                        Foreground="White"
                        Content="Выход"
                        FontSize="16"
                        FontWeight="SemiBold"
                        CornerRadius="10"
                        Padding="0,12"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Margin="0,0,0,10"
                        Command="{Binding LogoutCommand}"
                        Name="LogoutButton"/>

                <Grid Grid.Row="1" ColumnDefinitions="*,*">

                <Button Grid.Column="0"
                        Background="White"
                        BorderThickness="0"
                        Padding="0,8"
                        CornerRadius="8"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Command="{Binding NavigateToChatsCommand}"
                        Name="ChatsTabButton">
                    <StackPanel Spacing="4" HorizontalAlignment="Center">
                        <Viewbox Width="28" Height="28"
                                 HorizontalAlignment="Center">
                            <Canvas Width="24" Height="24">
                                <Path Fill="#EF3C45"
                                      Data="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Чаты"
                                   FontSize="12"
                                   Foreground="#EF3C45"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   MinWidth="70"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="1"
                        BorderThickness="0"
                        Background="#EF3C45"
                        Padding="0,8"
                        CornerRadius="8"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Name="ProfileTabButton">
                    <StackPanel Spacing="4" HorizontalAlignment="Center">
                        <Viewbox Width="28" Height="28"
                                 HorizontalAlignment="Center">
                            <Canvas Width="24" Height="24">
                                <Path Fill="White"
                                      Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Профиль"
                                   FontSize="12"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   MinWidth="70"/>
                    </StackPanel>
                </Button>

                </Grid>
            </Grid>
        </Border>

    </Grid>
</UserControl>
