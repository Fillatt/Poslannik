<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

             mc:Ignorable="d" d:DesignWidth="240" d:DesignHeight="428"

             xmlns:local="using:Poslannik.Client.Ui.Controls"

             x:Name="Login"
             x:DataType="local:LoginViewModel"
             x:Class="Poslannik.Client.Ui.Controls.LoginView">

    <UserControl.Styles>
        <Style Selector="TextBox.auth-input">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Watermark" Value=""/>
        </Style>

        <Style Selector="Button.auth-button">
            <Setter Property="Background" Value="#EF3C45"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="0,12"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Styles>

    <Grid Background="#FAFAFA">

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="210"
                    Spacing="15"
                    Margin="0,-80,0,0">

            <Image Source="avares://Poslannik.Client.Ui.Controls/Resources/drawable/poslanik.png"
                   Width="120"
                   Height="120"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,5"/>

            <TextBlock Text="ЧГУ Посланник"
                       FontSize="28"
                       FontWeight="Bold"
                       FontFamily="avares://Poslannik.Client.Ui.Controls/Resources/Fonts#Lobster"
                       Foreground="#EF3C45"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

            <TextBox Classes="auth-input"
                     Watermark="Имя пользователя"
                     Name="UsernameTextBox"
                     Text="{Binding Login}"/>

            <TextBox Classes="auth-input"
                     Watermark="Пароль"
                     PasswordChar="●"
                     Name="PasswordTextBox"
                     Text="{Binding Password}"/>

            <Button Classes="auth-button"
                    Content="Войти"
                    Margin="0,10,0,0"
                    IsEnabled="{Binding CanLogin}"
                    Command="{Binding LoginCommand}"
                    Name="LoginButton"/>

            <TextBlock Text="Посланник v1.0 © 2025"
                       Foreground="#999999"
                       FontSize="10"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
